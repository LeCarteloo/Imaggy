{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@/models/*": ["models/*"],
      "@/routes/*": ["routes/*"],
      "@/services/*": ["services/*"],
      "@/controllers/*": ["controllers/*"],
      "@/utilis/*": ["utilis/*"],
      "@/middleware/*": ["middleware/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Emit */
    "outDir": "build",
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  }
}
